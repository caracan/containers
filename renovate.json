{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
      {  
        "enabled": false,
        "matchDatasources": [
          "docker"
        ],
        "matchUpdateTypes": [
          "major"
        ]
    },
    {
      "description": "Pin digests only for Docker-related files",
      "matchManagers": ["dockerfile", "docker-compose", "kubernetes"],
      "pinDigests": true
    },
    {
      "description": "Exclude caddy from pinning",
      "matchPaths": ["caddy/**"],
      "pinDigests": false
    },
    {
      "description": "Standard rules for all updates",
      "matchPackagePatterns": ["*"],
      "labels": ["renovate-update"],
      "rebaseWhen": "behind-base-branch"
    }
  ]
}

